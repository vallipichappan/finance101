{
    "name": "calculate_moving_averages",
    "description": "Calculate short and long moving averages for a stock symbol",
    "parameters": {
      "type": "object",
      "properties": {
        "symbol": {
          "type": "string",
          "description": "Ticker symbol, e.g. AAPL"
        },
        "short_period": {
          "type": "integer",
          "default": 20,
          "description": "Short moving average period"
        },
        "long_period": {
          "type": "integer",
          "default": 50,
          "description": "Long moving average period"
        }
      },
      "required": ["symbol"]
    },
    "responses": {
      "200": {
        "description": "Moving average analysis result",
        "content": {
          "application/json": {
            "example": {
              "symbol": "AAPL",
              "current_price": 187.34,
              "SMA20": 185.12,
              "SMA50": 182.67,
              "signal": "BULLISH",
              "analysis": "Short MA above Long MA, bullish trend"
            }
          }
        }
      }
    }
  }